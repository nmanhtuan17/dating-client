{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@Store/*": ["./src/Store/*"],
      "@assets/*": ["./src/assets/*"],
      "@services/*": ["./src/services/*"],
      "@pages/*": ["./src/pages/*"],
      "@utilities": ["./src/utilities/*"],
      "@layout": ["./src/layout/*"],
      "@routes": ["./src/routes/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts"
  ]
}
