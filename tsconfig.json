{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@Store/*": ["./src/Store/*"],
      "@assets/*": ["./src/assets/*"],
      "@services/*": ["./src/services/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"],
      "@utilities": ["./src/utilities"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts"
  ]
}
